---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---
<MainLayout title="Titel">
	<main class="container mx-auto p-4">
		<h1>Komponentbibliotek</h1>
        <p>Her kan du finde alle de komponenter, der er brugt i dette projekt.</p>
        <hr class="my-4" />
        <!-- Link komponent instanser -->
        <section>
            <h2 class="font-serif text-2xl">Links</h2>
            <p class="my-4"><Link href="#">Default link: </Link>Default linket er en del af en tekst, og burde gerne fungere som et <Link href="#">link</Link> i en paragraf.</Link></p>
            <p class="my-4"><Link href="#" variant="primary">Link variant: primary</Link></p>
            <p class="my-4"><Link href="#" variant="primary" size="small">Link variant: primary size small</Link></p>
            <p class="my-4"><Link href="#" variant="primary" size="medium">Link variant: primary size medium</Link></p>
            <p class="my-4"><Link href="#" variant="primary" size="large">Link variant: primary size large</Link></p>
            <p class="my-4"><Link href="#" variant="secondary" size="small">Link variant: secondary size small</Link></p>
            <p class="my-4"><Link href="#" variant="secondary" size="medium">Link variant: secondary size medium</Link></p>
            <p class="my-4"><Link href="#" variant="secondary" size="large">Link variant: secondary size large</Link></p>
        </section>
        <!-- Slut på Link komponent instanser -->
         <hr class="my-4" />
        <!-- Buttons komponent instanser -->
        <section>
            <h2 class="font-serif text-2xl">Buttons</h2>
            <p class="my-4"><Button>Default knap</Button></p>
            <p class="my-4"><Button variant="primary">Button variant: primary</Button></p>
            <p class="my-4"><Button variant="primary" size="small">Button variant: primary size small</Button></p>
            <p class="my-4"><Button variant="primary" size="medium">Button variant: primary size medium</Button></p>
            <p class="my-4"><Button variant="primary" size="large">Button variant: primary size large</Button></p>
            <p class="my-4"><Button variant="secondary" size="small">Button variant: secondary size small</Button></p>
            <p class="my-4"><Button variant="secondary" size="medium">Button variant: secondary size medium</Button></p>
            <p class="my-4"><Button variant="secondary" size="large">Variant: secondary size large</Button></p>
        </section>
        <!-- Slut på Buttons komponent instanser -->
	</main>
</MainLayout>